<?xml version="1.0"?>
<package type="template" section="frontend">
	<name>aiolos</name>
	<title>aiolos</title>
	<created>2011-12-26 19:40:00</created>
	<author>Stavros Stratakis</author>
	<authoremail>info@webgift.gr</authoremail>
	<authorurl>http://www.webgiftgr.com</authorurl>
