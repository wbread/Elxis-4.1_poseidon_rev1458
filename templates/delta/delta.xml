<?xml version="1.0"?>
<package type="template" section="frontend">
	<name>delta</name>
	<title>Delta</title>
	<created>2012-06-19 17:35:00</created>
	<author>Ioannis Sannos</author>
	<authoremail>info@isopensource.com</authoremail>
	<authorurl>http://www.isopensource.com</authorurl>
